<form class="box" action="/department/{{department._id}}/addstaff" method="POST">
  <label>Enter Staff Member Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Role" name="role">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Name" name="name">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Years here" name="years">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Staff</button>
</form>
