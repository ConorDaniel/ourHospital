<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th class="is-half">Vignette</th>  <!-- ✅ Twice the width -->
      <th>Photo</th>  <!-- ✅ Staff Image Column -->
      <th></th>  <!-- Empty column for delete button -->
    </tr>
  </thead>
  <tbody>
    {{#each staff}}
      <tr>
        <!-- Staff Info -->
        <td>{{role}}</td>
        <td>{{name}}</td>
        <td class="is-half">{{vignette}}</td>  <!-- ✅ Vignette now takes more space -->

        <!-- Staff Image (Aligned Right) -->
        <td>
          <figure class="image is-48x48">
            <img src="/images/staff-placeholder.jpg" alt="Staff Photo" class="is-rounded">
          </figure>
        </td>

        <!-- Smaller Delete Button (Fix: Ensure correct nesting) -->
        <td>
          <a href="/hospital/{{../hospital._id}}/department/{{../department._id}}/deletestaff/{{_id}}" class="button is-danger is-small is-light">
            <i class="fas fa-trash"></i>  <!-- ✅ Removed unnecessary spans -->
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
